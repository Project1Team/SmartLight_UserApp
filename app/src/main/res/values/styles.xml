<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Theme.Custom" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="custom_button_font_setting_style">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="normalSolidColor">#88000000</item>
        <item name="pressedSolidColor">@color/color_464646</item>
        <item name="normalTextColor">#FFFFFFFF</item>
        <item name="selectedTextColor">@color/color_ffffff</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@color/color_464646</item>
        <item name="isSelected">true</item>
    </style>

    <style name="button_red">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="normalSolidColor">#fc0000</item>
        <item name="pressedSolidColor">@color/color_464646</item>
        <item name="normalTextColor">#88FFFFFF</item>
        <item name="selectedTextColor">@color/color_ffffff</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@color/color_464646</item>
        <item name="isSelected">true</item>
    </style>

    <style name="button_blue">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="normalSolidColor">#0021fc</item>
        <item name="pressedSolidColor">@color/color_464646</item>
        <item name="normalTextColor">#88FFFFFF</item>
        <item name="selectedTextColor">@color/color_ffffff</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@color/color_464646</item>
        <item name="isSelected">true</item>
    </style>

    <style name="button_green">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="normalSolidColor">#0ca31b</item>
        <item name="pressedSolidColor">@color/color_464646</item>
        <item name="normalTextColor">#88FFFFFF</item>
        <item name="selectedTextColor">@color/color_ffffff</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@color/color_464646</item>
        <item name="isSelected">true</item>
    </style>

    <style name="xml_font_setting_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">0dp</item>z
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_text_color</item>
    </style>

    <style name="Toolbar.TitleText.Login" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/billabong</item>
    </style>

    <style name="Toolbar.TitleText.Main" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">@font/samsungsans</item>
    </style>

    <style name="Toolbar.TitleText.Alert" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/samsungsans</item>
    </style>
</resources>